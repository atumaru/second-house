
  <div class='account_page_top'>
  <div class="test">
    <div class='account_page'>
      <h1>Create Account</h1>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='user-form'>
      <%= form_with model:@user,url: user_registration_path , local: true do |f|%>
        <%= devise_error_messages!%>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :ニックネーム%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード（再）%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :お名前（姓）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :last_name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :お名前（名）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name, autofocus: true%>
          </div>
        </div>
      
         <div class="field">
          出身地
          <span class="field-label">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture", id:"user-prefecture"}) %>
        <div class="field">
          現在のお住まい
          <span class="field-label">必須</span>
        </div>
        <%= f.collection_select(:prefecture_now_id, Prefecture.all, :id, :name, {}, {class:"prefecture", id:"user-now-prefecture"}) %>
        
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
    </div>
  </div>
