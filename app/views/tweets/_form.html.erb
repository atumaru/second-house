<div class="sub_form" >
<%= form_with(model: tweet, local: true) do |f|%>
 
  <div class="fields">
    <%= f.label :title, tweet.title %><br />
    <%= f.text_field :title,class: :title_text %>
  </div>

    <div class="image_post">
    <%= f.label :image, tweet.image %><br />
    <%= f.file_field :image,class: :form_image %>
  </div>

  <div class="fields">
    <%= f.label :text, tweet.text %><br />
    <%= f.text_area :text, class: :form_text,rows: "10" %>
  </div>
</div>
  
  
  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>
</div>