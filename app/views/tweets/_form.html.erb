<%= form_with(model: tweet, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, tweet.title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text, tweet.text %><br />
    <%= f.text_area :text, class: :form__text %>
  </div>

  
  
  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>