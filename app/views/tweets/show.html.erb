<div class="tweet_all">
 <div class ="tweet_title">
 <%="title:#{@tweet.title}"%>
 </div>
 <div class="tweet_image">
 <%= image_tag @tweet.image.variant(resize:'500x500') %>
 </div>
 <div class="tweet_text">
<%="message:#{@tweet.text}"%>
</div>
</div>
<div class="tweet_comments">
        <% if user_signed_in? %>
          <%= form_with model: [ @tweet,@comment], local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.text%>
              <%= link_to "（#{comment.user.nickname}）", "#", class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>